{
  "manifest_version": 2,
  "name": "Databricks Tweak",
  "version": "{{PACKAGE_VERSION}}",
  "description": "Databricks Tweak is a web extension which adds some additional functionality to Databricks UI",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png",
    "512": "img/icon512.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [{
    "matches": [
      "https://*.cloud.databricks.com/*",
      "https://*.azuredatabricks.net/*",
      "https://*.gcp.databricks.com/*"
    ],
    "js": ["js/content.js"],
    "run_at": "document_end"
  }],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
